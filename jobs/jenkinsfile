import groovy.json.JsonSlurperClassic

def JsonParse(def json){
    new groovy.json.JsonSlurperClassic().parseText(json)
}
pipeline{
    agent{label'master'}
    environment {
        appName = 'variable'
    }
    stages{
        stage('Paso 1'){
            steps{
                script{
                    sh "echo 'Hola mundo'"
                }
            }
        }
    }
}
post{
    always{
        deleteDir()
        sh "echo 'fase always'"
    }
    success{
        sh "echo 'fase success'"    
    }
    failure{
        sh "echo 'fase failure'"
    }
}